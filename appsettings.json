{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Application": "Ticketing.Api"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Default": ""
  },
  "Jwt": {
    "Issuer": "Ticketing.Api",
    "Audience": "Ticketing.Web",
    "Key": "",
    "AccessTokenMinutes": 15,
    "RefreshTokenDays": 30
  },
  "AutoApplyMigrations": false,
  "SendGridSettings": {
    "ApiKey": "",
    "FromEmail": "",
    "FromName": "Ticketing System"
  },
  "EmailConfirmation": {
    "BaseUrl": "",
    "ExpirationMinutes": 1440
  },
  "Seed": {
    "AdminEmail": "admin@local.test",
    "AdminPassword": ""
  }
}
