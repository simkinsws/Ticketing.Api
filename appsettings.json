      "image/jpeg",
      "image/png",
      "image/gif",
      "application/pdf",
      "application/msword",
      "application/vnd.openxmlformats-officedocument.wordprocessingml.document",
      "text/plain",
      "application/zip"
    ],
    "Local": {
      "UploadDirectory": "Uploads",
      "UseYearMonthSubdirectories": true
    },
    "Azure": {
      "ConnectionString": "",
      "ContainerName": "attachments-blob",
      "CreateContainerIfNotExists": true,
      "PublicAccessLevel": "None"
    }
