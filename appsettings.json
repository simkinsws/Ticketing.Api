  "https://localhost:5173",
  "https://proud-pebble-0b53dc81e.2.azurestaticapps.net"
],
"ConnectionStrings": {
  "Default": ""
},
"Jwt": {
    "Issuer": "Ticketing.Api",
    "Audience": "Ticketing.Web",
    "Key": "",
    "AccessTokenMinutes": 15,
    "RefreshTokenDays": 30
  },
  "AutoApplyMigrations": false,
  "SendGridSettings": {
    "ApiKey": "",
    "FromEmail": "",
    "FromName": "Ticketing System"
  },
  "EmailConfirmation": {
    "BaseUrl": "",
