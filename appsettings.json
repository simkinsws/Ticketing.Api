{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ],
    "Properties": {
      "Application": "Ticketing.Api"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Default": ""
  },
  "Jwt": {
    "Issuer": "Ticketing.Api",
    "Audience": "Ticketing.Web",
    "Key": "",
    "AccessTokenMinutes": 15,
    "RefreshTokenDays": 30
  },
  "SendGridSettings": {
    "ApiKey": "SG.YOUR_KEY",
    "FromEmail": "",
    "FromName": ""
  },
  "EmailConfirmation": {
    "BaseUrl": "http://localhost:5173",
    "ExpirationMinutes": 1440
  },
  "Seed": {
    "AdminEmail": "admin@local.test",
    "AdminPassword": ""
  }
}
