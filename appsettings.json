  "Enrich": [ "FromLogContext" ],
  "Properties": {
    "Application": "Ticketing.Api"
  }
},
"Logging": {
  "LogLevel": {
    "Default": "Debug",
    "Microsoft.AspNetCore": "Warning"
  }
},
"AllowedHosts": "*",
